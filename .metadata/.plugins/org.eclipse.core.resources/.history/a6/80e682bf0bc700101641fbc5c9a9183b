package h2;

public class H2_main {
    public static void main(String[] args) {

        int n = 299;        
        int digits = 0;
        int[] a = new int[9];
        
        if (n == 0) {
            digits = 1;
        } else {
            
            for (int temp = n; temp > 0; temp /= 10) {
                digits++;
            }
        }
        
        int temp = n;       
        for (int i = 8; i >= 9 - digits; i--) {
            a[i] = temp % 10;   
            temp /= 10;         
        }

        
        System.out.println("digits = " + digits);
        System.out.print("Array a = ");
        for (int value : a) {
            System.out.print(value + " ");
        }
    }
}
