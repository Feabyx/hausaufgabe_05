package h3;

public class H3_main {

    public static void main(String[] args) {

        // Zweidimensionales Array wie vorgegeben
        int[][] einheiten = {
                {50000, 20000, 10000, 5000, 2000, 1000, 500, 200, 100, 50, 20, 10, 5, 2, 1},
                new int[15]     // zweite Zeile: überall 0
        };

        int input = 6279;   // Beispielwert – kann beliebig geändert werden

        int rest = input;   // wir ziehen Stücke ab, bis der Rest 0 ist

        // Zerlegung des Geldbetrags
        for (int i = 0; i < einheiten[0].length; i++) {
            int wert = einheiten[0][i];

            if (rest >= wert) {
                einheiten[1][i] = rest / wert;   // Anzahl der Stücke
                rest = rest % wert;              // Rest aktualisieren
            }
        }

        // Ausgabe zur Kontrolle
        System.out.println("Input-Betrag: " + input + " Cent");
        System.out.println("Zerlegung in möglichst wenige Scheine/Münzen:");
        for (int i = 0; i < einheiten[0].length; i++) {
            System.out.println(einheiten[0][i] + " Cent: " + einheiten[1][i] + "x");
        }
    }
}
